                        <enumerationValue key="search">search</enumerationValue>
                        <enumerationValue key="retweet">retweet</enumerationValue>
                    </enumerationValues>
                </property> -->
            </propertyGroup>
            <propertyGroup caption="Visibility">
                <systemProperty key="Visibility"/>
            </propertyGroup>
            <propertyGroup caption="Events">
                <property key="buttonAction" type="action">
	                <caption>On click</caption>
	                <description/>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>